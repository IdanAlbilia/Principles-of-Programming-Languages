<MainWindow>:
    #:set default_font_size "20sp"
    #:import rgba kivy.utils.get_color_from_hex
    canvas.before:
        Color:
            rgba: rgba('#8B8282')
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Home-Page.jpg"
    cols:1
    location:location
    time:time
    places:places
    GridLayout:

        cols:1
        size: root.width, root.height
        GridLayout:


            cols:2

            Label:
                font_size:default_font_size
                bold:True
                text: "What is your current location?"
            TextInput:
                id: location
                text: ''
                multiline:False
                foreground_color: (0,0,0,1)
                background_color: (1,1,1,0.4)
                font_size:default_font_size

            Label:

                bold:True
                font_size: default_font_size
                text: "How much time would you like to spend?"
            TextInput:
                id: time
                text:''
                multiline:False
                foreground_color: (0,0,0,1)
                background_color: (1,1,1,0.4)
                font_size:default_font_size

            Label:
                bold:True
                font_size: default_font_size
                text: "How many location recommendations \n would you like to receive?"
            TextInput:
                id: places
                text:''
                multiline:False
                font_size:default_font_size
                foreground_color: (0,0,0,1)
                background_color: (1,1,1,0.4)
    AnchorLayout:
        Button:
            on_press: root.recommend()
            size:115, 50
            background_normal: ''
            size_hint: None, None
            pos: 350 ,100
            text: "Submit"
            font_size: "28sp"
            bold:True
            background_color: rgba("#0098E4")





